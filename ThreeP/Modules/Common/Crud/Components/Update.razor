@namespace Mac.Modules.Crud
@typeparam T where T : BaseModel, new()


<MBox Name="Dodaj/Edytuj" Expanded="expanded" ExpandedDisabled="true" StickyTop StickyOffsetTop="64px"
      OnDoubleClick="@Add">
    <HeaderRight>
        @* ADD BUTTON *@
        <MudButton Disabled="updateDisabled" Variant="Variant.Outlined" Color="Color.Warning" Size="Size.Medium"
                   OnClick="Add">Dodaj
        </MudButton>
        
    </HeaderRight>
    <ChildContent>

        <MudForm @key="titem.item?.Id" @ref="@form" Model="titem.item!" @bind-IsValid="@success" @bind-Errors="errors">
            @if (titem.item is not null&&ChildContent is not null)
            {
                @ChildContent(titem.item!)
            }

            @* BUTTONS *@
            <MudStack Row Justify="Justify.FlexEnd" Class="@GlobalStyles.MarginTop">
                <MudButton Variant="Variant.Outlined" Color="Color.Error" Size="Size.Small" OnClick="Cancel" Class="me-3">Anuluj
                </MudButton>
                <MudButton Disabled="@(!success)" Variant="Variant.Filled" Color="Color.Success" OnClick="Ok">
                    OK
                </MudButton>
            </MudStack>
        </MudForm>
    </ChildContent>
</MBox>

