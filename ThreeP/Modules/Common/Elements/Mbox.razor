@namespace Mac.Modules.Elements
<MudPaper Elevation="GlobalStyles.Elevation" Class="my-10 pa-4">
    <MudStack Row Justify="Justify.SpaceBetween">
        <PageHeader Name="@Name" Color="Color.Primary" Typo="Typo.body1"/>
        <MudToggleIconButton @bind-Toggled="collapsed" Icon="@Icons.Material.Filled.ArrowDropUp"
                             ToggledIcon="@Icons.Material.Filled.ArrowDropDown"/>
    </MudStack>
    <MudCollapse Expanded="collapsed">
        @ChildContent
    </MudCollapse>
</MudPaper>


@code {
    [Parameter] public string? Name { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
    bool collapsed = true;
}